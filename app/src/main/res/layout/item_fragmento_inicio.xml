<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="40dp">

            <ImageView
                android:id="@+id/circleImag"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/persona" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/servicioXml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lorem sdfsdfsdgsdfgsdsdfdfd"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/ciudadXml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lorem sdfsdfsdgsdfgsdsdfdfdffffffffffffffffffffffffffffffffffffffdddddddddddddddddddd"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/telefonoXml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lorem sdfsdfsdgsdfgsdsdfdfd"
                    android:textColor="@color/black" />


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>